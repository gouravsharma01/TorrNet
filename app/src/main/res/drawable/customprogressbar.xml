<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
<item android:id="@android:id/background">
    <shape>
        <gradient
            android:startColor="#00000001"
            android:centerColor="#000B131E"
            android:centerY="1.0"
            android:endColor="#000D1522"
            android:angle="270"
            />
    </shape>
</item>

    <!-- Define the progress properties like start color, end color etc -->
<item android:id="@android:id/progress">
<clip>
    <shape>
        <gradient
            android:startColor="#035BF4"
            android:centerColor="#3333E4"
            android:centerY="1.0"
            android:endColor="#45F545"
            android:angle="270"
            />
    </shape>
</clip>
</item>
    </layer-list>